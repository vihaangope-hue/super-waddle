<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HydraSense - Leak Monitoring Dashboard</title>
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        // ==============================================================================
        // DUMMY DATA - Replace with real API call later
        // ==============================================================================
        const DUMMY_ALERTS = [
            {
                id: "ALRT-001",
                timestamp: "2025-12-09T10:15:00Z",
                pipeline: "North Groundwater Main",
                segment: "Segment 12",
                segmentNumber: 12,
                distanceFromSource_m: 347,
                severity: "Critical",
                status: "Active",
                estimatedLoss_Lmin: 3.2
            },
            {
                id: "ALRT-002",
                timestamp: "2025-12-09T09:40:00Z",
                pipeline: "Irrigation Line West",
                segment: "Segment 5",
                segmentNumber: 5,
                distanceFromSource_m: 120,
                severity: "Warning",
                status: "Resolved",
                estimatedLoss_Lmin: 0.8
            },
            {
                id: "ALRT-003",
                timestamp: "2025-12-09T08:22:00Z",
                pipeline: "North Groundwater Main",
                segment: "Segment 3",
                segmentNumber: 3,
                distanceFromSource_m: 89,
                severity: "Warning",
                status: "Active",
                estimatedLoss_Lmin: 1.5
            }
        ];

        // Pipeline configuration - adjust number of segments here
        const PIPELINE_SEGMENTS = 15;

        // ==============================================================================
        // ICON COMPONENTS (Lucide React alternatives)
        // ==============================================================================
        const AlertCircle = ({ className }) => (
            <svg className={className} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" strokeWidth="2"/>
                <line x1="12" y1="8" x2="12" y2="12" strokeWidth="2" strokeLinecap="round"/>
                <line x1="12" y1="16" x2="12.01" y2="16" strokeWidth="2" strokeLinecap="round"/>
            </svg>
        );

        const Droplets = ({ className }) => (
            <svg className={className} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
            </svg>
        );

        const CheckCircle = ({ className }) => (
            <svg className={className} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" strokeWidth="2"/>
                <polyline points="9 12 11 14 15 10" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"/>
            </svg>
        );

        const Clock = ({ className }) => (
            <svg className={className} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" strokeWidth="2"/>
                <polyline points="12 6 12 12 16 14" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"/>
            </svg>
        );

        const MapPin = ({ className }) => (
            <svg className={className} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3" strokeWidth="2"/>
            </svg>
        );

        const Activity = ({ className }) => (
            <svg className={className} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"/>
            </svg>
        );

        // ==============================================================================
        // HELPER FUNCTIONS
        // ==============================================================================

        // Format timestamp to readable format
        const formatTimestamp = (isoString) => {
            const date = new Date(isoString);
            return date.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        };

        // Get recommended action based on severity
        const getRecommendedAction = (alert) => {
            if (alert.severity === "Critical") {
                return `URGENT: Dispatch crew immediately to valve near ${alert.segment}. Shut off section and inspect joint. Estimated response time: 15-20 minutes.`;
            }
            return `Monitor situation closely. Schedule inspection of ${alert.segment} within next 4 hours. Prepare crew for potential intervention.`;
        };

        // ==============================================================================
        // MAIN COMPONENT
        // ==============================================================================

        function HydraSenseDashboard() {
            const [alerts, setAlerts] = useState([]);
            const [selectedAlert, setSelectedAlert] = useState(null);
            const [loading, setLoading] = useState(true);

            // Simulate API fetch on component mount
            useEffect(() => {
                // TODO: Replace with real API call
                // Example: fetch('/api/alerts').then(res => res.json()).then(data => setAlerts(data))
                
                setTimeout(() => {
                    setAlerts(DUMMY_ALERTS);
                    setLoading(false);
                }, 500);
            }, []);

            // Calculate system status
            const activeAlerts = alerts.filter(a => a.status === "Active");
            const criticalAlerts = activeAlerts.filter(a => a.severity === "Critical");
            const systemStatus = criticalAlerts.length > 0 ? "Critical" : 
                               activeAlerts.length > 0 ? "Warning" : "All Good";

            if (loading) {
                return (
                    <div className="min-h-screen bg-slate-50 flex items-center justify-center">
                        <div className="text-slate-600">Loading dashboard...</div>
                    </div>
                );
            }

            return (
                <div className="min-h-screen bg-slate-50">
                    {/* Header */}
                    <header className="bg-white border-b border-slate-200 shadow-sm">
                        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
                            <div className="flex items-center justify-between">
                                <div className="flex items-center space-x-3">
                                    <Droplets className="w-8 h-8 text-blue-600" />
                                    <h1 className="text-2xl font-bold text-slate-900">HydraSense</h1>
                                    <span className="text-slate-500 text-sm">Leak Monitoring Dashboard</span>
                                </div>
                                {activeAlerts.length > 0 && (
                                    <div className="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-semibold">
                                        {activeAlerts.length} Active Alert{activeAlerts.length !== 1 ? 's' : ''}
                                    </div>
                                )}
                            </div>
                        </div>
                    </header>

                    {/* Main Content */}
                    <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
                            
                            {/* Left Column - System Status & Alerts List */}
                            <div className="lg:col-span-1 space-y-6">
                                
                                {/* System Status Card */}
                                <div className="bg-white rounded-lg shadow-md p-6">
                                    <h2 className="text-lg font-semibold text-slate-900 mb-4">System Status</h2>
                                    <div className={`flex items-center space-x-3 p-4 rounded-lg ${
                                        systemStatus === "Critical" ? "bg-red-50" :
                                        systemStatus === "Warning" ? "bg-orange-50" :
                                        "bg-green-50"
                                    }`}>
                                        {systemStatus === "All Good" ? (
                                            <CheckCircle className="w-8 h-8 text-green-600" />
                                        ) : (
                                            <AlertCircle className={`w-8 h-8 ${
                                                systemStatus === "Critical" ? "text-red-600" : "text-orange-600"
                                            }`} />
                                        )}
                                        <div>
                                            <div className={`text-xl font-bold ${
                                                systemStatus === "Critical" ? "text-red-900" :
                                                systemStatus === "Warning" ? "text-orange-900" :
                                                "text-green-900"
                                            }`}>
                                                {systemStatus}
                                            </div>
                                            <div className="text-sm text-slate-600">
                                                {activeAlerts.length === 0 ? "No active leaks detected" : 
                                                 `${activeAlerts.length} active leak${activeAlerts.length !== 1 ? 's' : ''} detected`}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                {/* Alerts List */}
                                <div className="bg-white rounded-lg shadow-md p-6">
                                    <h2 className="text-lg font-semibold text-slate-900 mb-4">Recent Alerts</h2>
                                    <div className="space-y-3">
                                        {alerts.length === 0 ? (
                                            <p className="text-slate-500 text-center py-4">No alerts to display</p>
                                        ) : (
                                            alerts.map(alert => (
                                                <div
                                                    key={alert.id}
                                                    onClick={() => setSelectedAlert(alert)}
                                                    className={`p-4 rounded-lg border-2 cursor-pointer transition-all ${
                                                        selectedAlert?.id === alert.id
                                                            ? "border-blue-500 bg-blue-50"
                                                            : "border-slate-200 hover:border-slate-300 bg-white"
                                                    } ${alert.status === "Resolved" ? "opacity-60" : ""}`}
                                                >
                                                    <div className="flex items-start justify-between mb-2">
                                                        <div className="flex items-center space-x-2">
                                                            <span className={`px-2 py-1 rounded text-xs font-semibold ${
                                                                alert.severity === "Critical"
                                                                    ? "bg-red-100 text-red-800"
                                                                    : "bg-orange-100 text-orange-800"
                                                            }`}>
                                                                {alert.severity}
                                                            </span>
                                                            <span className={`px-2 py-1 rounded text-xs ${
                                                                alert.status === "Active"
                                                                    ? "bg-slate-900 text-white font-semibold"
                                                                    : "bg-slate-200 text-slate-600"
                                                            }`}>
                                                                {alert.status}
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div className="font-semibold text-slate-900 mb-1">
                                                        {alert.pipeline}
                                                    </div>
                                                    <div className="text-sm text-slate-600 flex items-center space-x-4">
                                                        <span className="flex items-center space-x-1">
                                                            <Clock className="w-3 h-3" />
                                                            <span>{formatTimestamp(alert.timestamp)}</span>
                                                        </span>
                                                    </div>
                                                    <div className="text-sm text-slate-500 mt-1">
                                                        {alert.segment}
                                                    </div>
                                                </div>
                                            ))
                                        )}
                                    </div>
                                </div>
                            </div>

                            {/* Right Column - Alert Details & Pipeline Map */}
                            <div className="lg:col-span-2 space-y-6">
                                
                                {selectedAlert ? (
                                    <>
                                        {/* Alert Details Card */}
                                        <div className="bg-white rounded-lg shadow-md p-6">
                                            <div className="flex items-start justify-between mb-4">
                                                <h2 className="text-xl font-bold text-slate-900">Alert Details</h2>
                                                <span className="text-sm text-slate-500">ID: {selectedAlert.id}</span>
                                            </div>

                                            <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                                <div>
                                                    <div className="text-sm text-slate-500 mb-1">Pipeline</div>
                                                    <div className="text-lg font-semibold text-slate-900">
                                                        {selectedAlert.pipeline}
                                                    </div>
                                                </div>
                                                <div>
                                                    <div className="text-sm text-slate-500 mb-1">Time Detected</div>
                                                    <div className="text-lg font-semibold text-slate-900">
                                                        {formatTimestamp(selectedAlert.timestamp)}
                                                    </div>
                                                </div>
                                                <div>
                                                    <div className="text-sm text-slate-500 mb-1 flex items-center space-x-1">
                                                        <MapPin className="w-4 h-4" />
                                                        <span>Break Location</span>
                                                    </div>
                                                    <div className="text-lg font-semibold text-slate-900">
                                                        {selectedAlert.segment}
                                                    </div>
                                                    <div className="text-sm text-slate-600">
                                                        {selectedAlert.distanceFromSource_m}m from source
                                                    </div>
                                                </div>
                                                <div>
                                                    <div className="text-sm text-slate-500 mb-1 flex items-center space-x-1">
                                                        <Activity className="w-4 h-4" />
                                                        <span>Estimated Flow Loss</span>
                                                    </div>
                                                    <div className="text-lg font-semibold text-red-600">
                                                        {selectedAlert.estimatedLoss_Lmin} L/min
                                                    </div>
                                                </div>
                                            </div>

                                            <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                                <div className="font-semibold text-blue-900 mb-2">Recommended Action</div>
                                                <div className="text-sm text-blue-800">
                                                    {getRecommendedAction(selectedAlert)}
                                                </div>
                                            </div>
                                        </div>

                                        {/* Pipeline Schematic Card */}
                                        <div className="bg-white rounded-lg shadow-md p-6">
                                            <h2 className="text-lg font-semibold text-slate-900 mb-4">
                                                Pipeline Schematic - {selectedAlert.pipeline}
                                            </h2>
                                            
                                            {/* Pipeline Visualization */}
                                            <div className="relative bg-slate-50 rounded-lg p-8 overflow-x-auto">
                                                <div className="flex items-center space-x-2 min-w-max">
                                                    {/* Source indicator */}
                                                    <div className="flex flex-col items-center">
                                                        <div className="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                                                            <Droplets className="w-5 h-5 text-white" />
                                                        </div>
                                                        <div className="text-xs text-slate-600 mt-1">Source</div>
                                                    </div>

                                                    {/* Pipeline segments */}
                                                    {/* TODO: Adjust PIPELINE_SEGMENTS constant at top to change number of segments */}
                                                    {Array.from({ length: PIPELINE_SEGMENTS }, (_, i) => i + 1).map(segNum => {
                                                        const isAlertSegment = segNum === selectedAlert.segmentNumber;
                                                        return (
                                                            <React.Fragment key={segNum}>
                                                                {/* Connecting line */}
                                                                <div className={`w-12 h-1 ${
                                                                    isAlertSegment ? "bg-red-500" : "bg-slate-300"
                                                                }`} />
                                                                {/* Segment node */}
                                                                <div className="flex flex-col items-center">
                                                                    <div className={`w-10 h-10 rounded-lg flex items-center justify-center text-sm font-semibold border-2 transition-all ${
                                                                        isAlertSegment
                                                                            ? selectedAlert.severity === "Critical"
                                                                                ? "bg-red-500 border-red-600 text-white shadow-lg scale-110"
                                                                                : "bg-orange-500 border-orange-600 text-white shadow-lg scale-110"
                                                                            : "bg-white border-slate-300 text-slate-700"
                                                                    }`}>
                                                                        {segNum}
                                                                    </div>
                                                                    <div className="text-xs text-slate-600 mt-1">S{segNum}</div>
                                                                    {isAlertSegment && (
                                                                        <div className="absolute mt-16 bg-red-600 text-white text-xs px-2 py-1 rounded shadow-lg whitespace-nowrap">
                                                                            âš  Leak Detected
                                                                        </div>
                                                                    )}
                                                                </div>
                                                            </React.Fragment>
                                                        );
                                                    })}
                                                </div>
                                            </div>

                                            <div className="mt-4 text-sm text-slate-600">
                                                <div className="flex items-center space-x-4">
                                                    <div className="flex items-center space-x-2">
                                                        <div className="w-4 h-4 bg-slate-300 rounded"></div>
                                                        <span>Normal</span>
                                                    </div>
                                                    <div className="flex items-center space-x-2">
                                                        <div className="w-4 h-4 bg-orange-500 rounded"></div>
                                                        <span>Warning</span>
                                                    </div>
                                                    <div className="flex items-center space-x-2">
                                                        <div className="w-4 h-4 bg-red-500 rounded"></div>
                                                        <span>Critical Leak</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </>
                                ) : (
                                    /* Placeholder when no alert selected */
                                    <div className="bg-white rounded-lg shadow-md p-12 text-center">
                                        <AlertCircle className="w-16 h-16 text-slate-300 mx-auto mb-4" />
                                        <h3 className="text-lg font-semibold text-slate-900 mb-2">
                                            No Alert Selected
                                        </h3>
                                        <p className="text-slate-500">
                                            Select an alert from the list to view leak details and pipeline schematic
                                        </p>
                                    </div>
                                )}
                            </div>
                        </div>
                    </main>
                </div>
            );
        }

        // Render the app
        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<HydraSenseDashboard />);
    </script>
</body>
</html>
